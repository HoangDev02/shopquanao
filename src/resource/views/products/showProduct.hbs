
<section class="product_section layout_padding">
  <div class="container">
    
    <form class="d-flex"  action="/product/search" role="search" method="get">
      <input class="form-control text-center" type="text" placeholder="search" aria-label="search" name="search" style="text-transform: uppercase;">
      <button class="btn btn-outline-danger " type="submit" style="height: 38px;text-align: center; margin-left: 10px;">Search</button>
    </form>
    
    <div class="heading_container heading_center">
      <h2>
        Our
        <span>products</span>
      </h2>
    </div>
    
    <div class="row">
      
      {{#each products}}
        <div class="col-sm-6 col-md-4 col-lg-4">
          <div class="box">
            <div class="option_container">
              <div class="options">
                <a href="/detail/{{this._id}}" class="option1">
                  Details
                </a>
              </div>
            </div>
            <div class="img-box">
              <img src={{this.img}} alt="image" />
            </div>
            <div class="detail-box">
              <h5
                style="white-space: nowrap;
                    overflow: hidden;
                    display: block;
                    width: 150px;
                    text-overflow: ellipsis;"
              >
                {{this.name}}
              </h5>
              <h6>
                ${{this.price}}
              </h6>
            </div>
          </div>
        </div>
      {{/each}}

    </div>
  </div>
</section>

